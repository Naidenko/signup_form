.registration
	display flex
	min-height 480px


.registration__side
	display flex
	flex-direction column
	align-items flex-end
	justify-content flex-end

	min-width 137.2px
	background-color #5A61ED

.side__title
	margin-right 5.7px
	width 100%

	font-family PTSans
	font-size 49px
	font-weight normal
	line-height 63px
	white-space nowrap
	letter-spacing .5px
	color #FFFFFF
	transform rotate(-90deg) translate(58px, 38px)

.registration__form
	background-image url('../images/icon.svg#icon_form-background-view')
	background-repeat no-repeat
	background-position bottom right
	background-size 307px 355px

.form
	display flex
	flex-direction column
	justify-content space-between

	padding-top 38.5px
	padding-right 22px
	padding-left 20.8px
	padding-bottom 32.48px

	box-sizing border-box
	min-height 480px

.form__title
	margin 0

	font-family Work Sans
	font-size 22px
	font-weight 500
	line-height 26px
	letter-spacing -.46px
	color #111111

.form__text
	margin-bottom 21px

	font-family Work Sans
	font-size 14px
	font-weight 300
	line-height 16px
	color #111111

.form__wrap
	display flex
	flex-wrap wrap

.input__wrap
	margin-right 15.05px

	display flex
	flex-direction column
	width 48%

.input__wrap:nth-child(2n)
	margin-right 0

.form__label
.date__legend
	font-family Work Sans
	font-size 12px
	font-weight 300
	line-height 14px
	color #7C7C7C

.form__input
	margin-bottom 16px
	padding-top 4.9px
	padding-bottom 6.3px
	box-sizing border-box

	font-family Work Sans
	font-size 14px
	font-weight 400
	line-height 16px
	color #111111
	background-color transparent
	border none
	border-bottom .7px solid #F2F2F2

.form__input:hover
	border-bottom .7px solid #858585

.form__input:focus
.form__input:active
	border-bottom .7px solid #333333

input[type='text']::placeholder
.email__input::placeholder
	font-family Work Sans
	font-size 14px
	font-weight 400
	line-height 16px
	color #111111

.select__wrap
	overflow hidden
	background-image url('../images/icon.svg#icon_arrow-view')
	background-repeat no-repeat
	background-position right
	background-size 8px 4px

.form__nationality:hover
.form__day:hover
.form__month:hover
.form__year:hover
	border-bottom .7px solid #858585

.form__nationality:focus
.form__day:focus
.form__month:focus
.form__year:focus
.form__nationality:active
.form__day:active
.form__month:active
.form__year:active
	border-bottom .7px solid #333333

.form__nationality
	-webkit-appearance none

	margin-bottom 16px
	padding-top 4.9px
	padding-bottom 6.3px
	font-family Work Sans
	font-size 14px
	font-weight normal
	line-height 16px
	background-color transparent
	border none
	border-bottom .7px solid #F2F2F2

.email__label
	position relative

.email__label.correct::after
	position absolute
	top 23px
	right -1px
	width 11px
	height 8px
	background-image url('../images/icon.svg#icon_shape-view')
	background-repeat no-repeat
	background-position center

	content ''


.email__label.error::after
	position absolute
	top 21px
	right 0
	width 14px
	height 14px
	content ''
	background-image url('../images/icon.svg#icon_cross-view')
	background-repeat no-repeat
	background-position center

.form__date
	margin-right 13.5px
	margin-bottom 16.5px
	width 48%
	border none

.date__wrap
	display flex
	flex-direction row
	justify-content space-between

.form__day
.form__month
.form__year
	-webkit-appearance none

	padding-top 5.3px
	padding-left 5%
	padding-bottom 5.6px
	width 100%
	font-family Work Sans
	font-size 14px
	font-weight normal
	line-height 16px
	background-color transparent
	border none
	border-bottom .7px solid #F2F2F2

.select__day
	width  23.9%

.select__month
	width 38.8%

.select__year
	width 28.9%

.form__gender
	margin-bottom 16.5px
	width 44%
	border none

.gender__legend
	margin-bottom 5px
	font-family Work Sans
	font-size 12px
	font-weight 300
	line-height 14px
	color #7C7C7C

.gender__input
	position absolute
	z-index -1
	margin 10px 0 0 7px
	opacity 0

	+ .gender__label
		position relative
		padding 0 0 0 18px
		cursor pointer

	+ .gender__label:before
		position absolute
		top 3px
		left 0
		width 11px
		height 11px
		content ''
		background transparent
		border .7px solid #5A61ED
		border-radius 50%

	:hover + .gender__label:before
		border .8px solid #2d346c

.gender__input + .gender__label:after
	position absolute
	top 6.47px
	left 3px
	width 6px
	height 6px
	content ''
	background-color #5A61ED
	border-radius 50%
	opacity 0
	transition .2s

.gender__input:checked + .gender__label:after
	opacity 1

.gender__label
	margin-right 16px
	font-family Work Sans
	font-size 14px
	font-weight normal
	line-height 16px

.form__info
	display flex
	justify-content space-between
	align-items center

.form__sign-in
	font-family Work Sans
	font-size 13px
	font-weight 300
	line-height 15px
	color #000000

.form__link
	font-weight 500
	text-decoration underline
	cursor pointer
	color #5A61ED

.form__link:hover
	color #4249b9

.form__link:focus
.form__link:active
	color #30357f

.form__submit
	margin-right 10px
	padding-top 7px
	padding-right 27px
	padding-left 25px
	padding-bottom 7px
	font-family PT Sans
	font-size 14px
	font-weight 400
	line-height 18px
	color #FFFFFF
	background-color #5A61ED
	border none

@media (max-width: 1279px)
	.input__wrap
		width 234.5px

	.form__date
		width 234.5px

	.select__day
		width 56px

	.select__month
		width 91px

	.select__year
		width 67.67px

	.form__day
	.form__month
	.form__year
		padding-left 0

	.form__gender
		margin-bottom 16.5px
		width 234.5px
		border none

	.form__submit
		margin-right 0


@media (max-width: 664px)
	.registration
		flex-direction column

	.side__title
		transform rotate(0deg)
		text-align center

	.input__wrap
		margin-right 0
		width 100%

	.form__date
	.form__gender
		width 80%

	.select__day
		width  23.9%

	.form__day
	.form__month
	.form__year
		padding-left 5%

	.select__month
		width 38.8%

	.select__year
		width 28.9%

	.form__info
		flex-direction column

	.form__sign-in
		margin-bottom 15px
